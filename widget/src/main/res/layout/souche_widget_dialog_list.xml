<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dialog_ll_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:gravity="center">

    <LinearLayout
        android:id="@+id/fengche_dialog_parent_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/souche_widget_btn_corner_shape"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/dialog_list_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="请选择"
            android:textColor="@color/dialog_title_color"
            android:textSize="18sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_list_rv_list"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fcprompt_fc_c8"/>

        <LinearLayout
            android:id="@+id/fengche_dialog_bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/dialog_list_tv_buttom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/souche_widget_btn_corner_selector"
                android:gravity="center"
                android:padding="12dp"
                android:text="取消"
                android:textColor="@color/fcprompt_fc_c3"
                android:textSize="16sp"/>

            <View
                android:id="@+id/dialog_button_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/fcprompt_fc_c8"/>

            <TextView
                android:id="@+id/dialog_list_tv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/souche_widget_btn_corner_selector"
                android:gravity="center"
                android:padding="12dp"
                android:text="确定"
                android:textColor="@color/fcprompt_fc_c1"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>